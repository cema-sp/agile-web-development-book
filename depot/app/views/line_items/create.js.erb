$('#cart').html("<%= j render @cart %>");

<% if (@cart.line_items.size == 1) && (@cart.line_items.first.quantity == 1) %>
	$('#cart').hide();
	$('#cart').show('blind', 2000);
<% end %>


$('#current_item').css({'background-color':'#88ff88'}).
	animate({'background-color':'#114411'}, 1000);