<div class="cart_title">Your Tea Cart</div>

<table>
	<%= render(cart.line_items) %>

	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell">
			<%= number_to_currency(cart.total_price) %>
		</td>
		<td>
			<%= button_to 'Empty cart', cart, 
				method: :delete, 
				confirm: 'Delete all items?' %>
		</td>
	</tr>
</table>