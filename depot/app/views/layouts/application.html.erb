<!DOCTYPE html>
<html>
<head>
  <title>Cema's Tea Shop</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
		<%= image_tag("logo.jpg") %>
		<%= @page_title || "Cema's Shop"%>
	</div>
	<div id="columns">
		<div id="side">
			<ul>
				<li><a href="#">Home</a></li>
				<li><a href="#">Questions</a></li>
				<li><a href="#">News</a></li>
				<li><a href="#">Contact</a></li>
			</ul>
			<div class="time">
				<%= sanitize(Time.now.strftime("%d.%m.%Y<br/>%H:%M")) %>
			</div>
			<div class="counter">
				You are here for <%= @session_counter.to_i.ordinalize %> time.
			</div>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
